<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#800080">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="의료정보과 Multi-Activity"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:padding="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="적절한 버튼을 선택하세요"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/buttonPriceCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="물품 가격 계산하기"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="계산기"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <!-- 나머지 버튼들 추가 -->
    <Button
        android:id="@+id/buttonAgeCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="나이 계산하기"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonTemperatureConverter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="온도 변환하기"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주문하기"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonAverageCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="평균 계산하기"
        android:background="#0000FF"
        android:textColor="#FFFFFF"
        android:layout_marginTop="8dp" />

</LinearLayout>
